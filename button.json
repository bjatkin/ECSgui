{
    "initial": "unpressed",
    "component": {
        "main": {
            "tag": "svg",
            "width": 100,
            "height": 100,
            "btn": {
                "tag":"rect",
                "x": 50,
                "y": 50,
                "rx": 20,
                "ry": 20,
                "width": 400,
                "height": 150,
                "style": "fill:red;stroke:black;stroke-width:1;opacity:0.5"
            }
        }
    },
    "states": [
        {
            "name": "unpressed",
            "transitions": [
                "hover-over"
            ]
        },
        {
            "name": "hovered",
            "transitions": []
        }
    ],
    "transitions": [
        {
            "name": "hover-over",
            "event": "on-hover-start",
            "target": "hovered",
            "modify": [
                {
                    "target": "btn",
                    "style": "fill:red;stroke:black;stroke-width:1;"
                }
            ],
            "add": [],
            "remove": []
        }
    ]
}